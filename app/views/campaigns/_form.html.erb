<%= form_with(model: campaign, local: true) do |form| %>

  <%= render 'shared/errors', obj: @campaign %>

  <div class="field">
    <%= form.label :name %> <br>
    <%= form.text_field :name %>
  </div>

  <div class="field">
    <%= form.label :due_start %> <br>
    <%= form.datetime_select :due_start %>
  </div>

  <div class="field">
    <%= form.label :due_end %> <br>
    <%= form.datetime_select :due_end %>
  </div>

  <div class="actions"> <br>
    <%= form.submit %>
  </div>
<% end %>
